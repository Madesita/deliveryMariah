<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imag1"
    tools:context=".interface_user.Principal"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/inputs2"
            android:id="@+id/text_user_label1"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName1"
            app:layout_constraintRight_toRightOf="@id/editTextUserName1"
            android:text="@string/Formulario"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/the_inputs"
            android:id="@+id/editTextUserName1"
            app:layout_constraintLeft_toLeftOf="@id/text_user_label1"
            app:layout_constraintRight_toRightOf="@id/text_user_label1"
            app:layout_constraintTop_toBottomOf="@id/text_user_label1"
            app:startIconContentDescription="@string/user"
            app:startIconDrawable="@drawable/ic_baseline_verified_user_24"
            android:hint="@string/user"
       >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name1"
                style="@style/t1"
                android:inputType="textPersonName"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/the_inputs"
            android:id="@+id/editTextUserName2"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName1"
            app:layout_constraintRight_toRightOf="@id/editTextUserName1"
            app:layout_constraintTop_toBottomOf="@id/editTextUserName1"
            app:startIconContentDescription="@string/nombre"
            app:startIconDrawable="@drawable/ic_usuario"
            android:hint="@string/nombre"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name2"
                style="@style/t1"
                android:inputType="textPersonName"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/the_inputs"
            android:id="@+id/editTextUserName3"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName2"
            app:layout_constraintRight_toRightOf="@id/editTextUserName2"
            app:layout_constraintTop_toBottomOf="@id/editTextUserName2"
            app:startIconContentDescription="@string/apellido"
            app:startIconDrawable="@drawable/ic_baseline_dvr_24"
            android:hint="@string/apellido"
           >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name3"
                style="@style/t1"
                android:inputType="textPersonName"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/the_inputs"
            android:id="@+id/editTextUserName4"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName3"
            app:layout_constraintRight_toRightOf="@id/editTextUserName3"
            app:layout_constraintTop_toBottomOf="@id/editTextUserName3"
            app:startIconContentDescription="@string/telefono"
            app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
            android:hint="@string/telefono"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name4"
                style="@style/t1"
                android:inputType="text|number"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/the_inputs"
            android:id="@+id/editTextUserName5"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName4"
            app:layout_constraintRight_toRightOf="@id/editTextUserName4"
            app:layout_constraintTop_toBottomOf="@id/editTextUserName4"
            app:startIconContentDescription="@string/email"
            app:startIconDrawable="@drawable/ic_baseline_mail_24"
            android:hint="@string/email"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name5"
                style="@style/t1"
                android:inputType="textWebEmailAddress"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button"
            style="@style/boton2"
            app:layout_constraintLeft_toLeftOf="@id/editTextUserName5"
            app:layout_constraintRight_toRightOf="@id/editTextUserName5"
            app:layout_constraintTop_toBottomOf="@id/editTextUserName5"
            android:text="@string/aceptar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>